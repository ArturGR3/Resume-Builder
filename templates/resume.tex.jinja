% Summary Section
\BLOCK{ if summary }
\begin{rSection}{Summary}
    \VAR{summary.summary}
\end{rSection}
\BLOCK{ endif }

%==== WORK EXPERIENCE SECTION =====%
\BLOCK{ if experiences.work_experience }
\begin{rSection}{Professional Experience}
    \BLOCK{ for exp in experiences.work_experience }
    \begin{rSubsection}
        {\VAR{exp.company}}{\VAR{exp.from_date} - \VAR{exp.to_date}}
        {\VAR{exp.role}}{\VAR{exp.location}}
        \BLOCK{ for point in exp.description }
        \item \VAR{point}
        \BLOCK{ endfor }
    \end{rSubsection}
    \BLOCK{ endfor }
\end{rSection}
\BLOCK{ endif }

%==== EDUCATION SECTION ====%
\BLOCK{ if educations.education }
\begin{rSection}{Education}
    \BLOCK{ for edu in educations.education }
    \begin{rSubsection}
        {\VAR{edu.university}}{\VAR{edu.from_date} - \VAR{edu.to_date}}
        {\VAR{edu.degree}}{}
        \BLOCK{ if edu.special_achievements }
            \BLOCK{ for achievement in edu.special_achievements }
                \item \VAR{achievement}
            \BLOCK{ endfor }
        \BLOCK{ else }
            \item % Add empty item if no achievements
        \BLOCK{ endif }
    \end{rSubsection}
    \BLOCK{ endfor }
\end{rSection}
\BLOCK{ endif }

%==== CERTIFICATIONS SECTION ====%
\BLOCK{ if certifications_trainings.certifications_trainings }
\begin{rSection}{Certifications \& Training}
    \BLOCK{ for cert in certifications_trainings.certifications_trainings }
    \begin{rCertification}
        {\VAR{cert.name}}
        {\VAR{cert.organization}}
        {\VAR{cert.date}}
        \BLOCK{ if cert.description }
            \item \VAR{cert.description}
        \BLOCK{ else }
            \item % Add empty item if no description
        \BLOCK{ endif }
    \end{rCertification}
    \BLOCK{ endfor }
\end{rSection}
\BLOCK{ endif }

%==== PROJECTS SECTION ====%
\BLOCK{ if projects.projects }
\begin{rSection}{Projects}
    \BLOCK{ for project in projects.projects }
    \begin{rProjectSection}
        {\href{\VAR{project.link}}{\VAR{project.name}}}
        {\VAR{project.date}}
        \BLOCK{ if project.description }
            \item \VAR{project.description}
        \BLOCK{ else }
            \item % Add empty item if no description
        \BLOCK{ endif }
    \end{rProjectSection}
    \BLOCK{ endfor }
\end{rSection}
\BLOCK{ endif }

%==== TECHNICAL SKILLS SECTION ====%
\BLOCK{ if skill_sections.skill_section }
\begin{rSection}{Technical Skills}
    \begin{tabular}{ @{} >{\bfseries}l @{\hspace{6ex}} l }
    \BLOCK{ for section in skill_sections.skill_section }
        \VAR{section.name}: & \VAR{', '.join(section.skills)} \\
    \BLOCK{ endfor }
    \end{tabular}
\end{rSection}
\BLOCK{ endif }

